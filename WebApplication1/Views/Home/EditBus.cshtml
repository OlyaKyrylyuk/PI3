
@{
    ViewBag.Title = "EditBus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<meta name="viewport" content="width=device-width" />
<title>Редагувати дані автобуса</title>
@Styles.Render("~/Content/css")

<div class="main_css">
    <h3>Замовлення квитків</h3>
    <div class="info">
        <form method="post" action="/Home/EditBus/@ViewBag.Bus.Id">
            <input type="hidden" value="@ViewBag.Bus.Id" name="Id" />
            <table>
                <tr>
                    <td><p>Введіть номер машини</p></td>
                    <td><input type="text" name="Number" value="@ViewBag.Bus.Number" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть марку машини</p></td>
                    <td><input type="text" name="Brand" value="@ViewBag.Bus.Brand" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть колір машини</p></td>
                    <td><input type="text" name="Color" value="@ViewBag.Bus.Color" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть  дату та час відправленя</p></td>
                    <td><input type="date" name="Data" value="@ViewBag.Bus.Data" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть  пункт відправленн(місто)</p></td>
                    <td><input type="text" name="Start" value="@ViewBag.Bus.Start" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть  пункт прибуття(місто)</p></td>
                    <td><input type="text" name="End" value="@ViewBag.Bus.End" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть  ціну</p></td>
                    <td><input type="number" name="Price" value="@ViewBag.Bus.Price" /> </td>
                </tr>
                <tr>
                <tr>
                    <div class="button">
                        <td><input type="submit" value="Редагувати" /> </td>
                    </div>
                    <td></td>
                </tr>
            </table>
        </form>


    </div>
</div>

